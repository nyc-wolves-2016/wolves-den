<% if @errors %>
	<ul>
		<% @errors.each do |error|%>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>


<form action="/wolves" method="post">
	<label>Name</label>
	<input type="text" name="wolf[name]">
	<label>Description</label>

	<input type="text" name="wolf[description]">
	<input type="submit" name="submit">
</form>